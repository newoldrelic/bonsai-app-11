{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",  // Changed from bundler to node for Netlify functions
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../../dist/functions",
    "rootDir": "../..",
    "allowJs": true,
    "resolveJsonModule": true,
    "types": ["node", "@netlify/functions"],
    "baseUrl": "../..",
    "composite": true,  // Added for project references
    "declaration": true,  // Added for project references
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "./**/*",
    "../../src/utils/debug.ts",
    "../../src/utils/openai.ts",
    "../../src/config/ai-prompts.ts",
    "../../src/config/constants.ts"
  ],
  "exclude": ["node_modules", "dist"]
}